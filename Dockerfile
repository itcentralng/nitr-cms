FROM strapi/base

WORKDIR /app

COPY ./package.json ./
COPY ./yarn.lock ./

RUN apt-get update && apt-get install -y python

RUN yarn install

COPY . .

ARG PORT
ENV PORT=${PORT}

ARG NODE_ENV
ENV NODE_ENV=${NODE_ENV}

ARG DATABASE_URL
ENV DATABASE_URL=${DATABASE_URL}

ARG ADMIN_USERNAME
ENV ADMIN_USERNAME=${ADMIN_USERNAME}

ARG ADMIN_PASSWORD
ENV ADMIN_PASSWORD=${ADMIN_PASSWORD}

ARG ADMIN_EMAIL
ENV ADMIN_EMAIL=${ADMIN_EMAIL}

ARG NODE_OPTIONS
ENV NODE_OPTIONS=${NODE_OPTIONS}

RUN yarn build

EXPOSE ${PORT}
CMD ["yarn", "start"]
